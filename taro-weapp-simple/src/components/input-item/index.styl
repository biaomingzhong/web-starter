.comp-input-item {
  position: relative;
  border: 0 solid #d8d8d8;
  border-bottom-width: 1px;
}

.comp-input-item__input {
  height: 106px;
  color: #000000;
  font-size: 24px;

  &--placeholder {
    color: #666666;
  }
}

.comp-input-item__clear {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  width: 42px;
  height: 106px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  &-img {
    width: 30px;
    height: 30px;
  }
}
