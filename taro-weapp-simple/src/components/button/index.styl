button-height: 92px;
button-height-sm: 60px;

.button {
  display: flex;
  justify-content: center;
  margin: 0 auto;
  padding: 0 32px;
  height: button-height;
  color: #333;
  font-size: 32px;
  line-height: button-height - 2;
  text-align: center;
  border-radius: 8px;
  border: 1PX solid #C5D9E8;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  &:active {
    opacity: 0.6;
  }

  &--active {
    opacity: 0.6;
  }

  &--disabled {
    opacity: 0.3;

    &:active {
      opacity: 0.3;
    }
  }

  &--primary {
    background-color: rgba(92, 137, 228, 1);
    color: #fff;
    border: 1PX solid rgba(92, 137, 228, 1);
  }

  &--secondary {
    background-color: #fff;
    color: rgba(92, 137, 228, 1);
    border: 1PX solid rgba(92, 137, 228, 1);
  }

  &__icon {
    margin: 2PX 20px 0 20px;
    display: inline-block;
  }

  &--circle {
    border-radius: 100px;
    overflow: hidden;
    background-clip: border-box;
  }

  &__text {
    display: inline;
  }

  &--small {
    display: inline-block;
    padding: 0 16px;
    width: auto;
    min-width: 100px;
    max-width: 710px;
    height: button-height-sm;
    font-size: 28px;
    line-height: button-height-sm - 2;
  }

  &__wxbutton {
    position: absolute;
    padding: 0;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-color: transparent;

    &::after {
      display: none;
    }
  }
}
